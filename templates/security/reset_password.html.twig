{% extends 'base.html.twig' %}

{% block title %}Demande de réinitialisation de mot de passe
{% endblock %}

{% block body %}
	<section class="container wrapper d-flex justify-content-center p-5 align-items-center">
		<div class="card shadow-sm p-4">
			<h1 class="h4 mb-4 text-center">Demande de réinitialisation de mot de passe</h1>
			{# Reset password form #}
			{{ form_start(passForm) }}
			{{ form_row(passForm.password, {'attr': {'class': 'form-control mb-3'}}) }}
			<button type="submit" class="btn btn-primary w-100 mb-2">Envoyer</button>
			{{ form_end(passForm) }}
		</div>
	</section>
{% endblock %}
