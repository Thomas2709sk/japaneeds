{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3 alert alert-success">
				Vous êtes déjà connecter en tant que
				{{ app.user.userIdentifier }},
				<a href="{{ path('app_logout') }}">Me déconnecter</a>
			</div>
		{% endif %}
<main>
	{# Animated background #}
	<div class="animated-bg"></div>
	{# login form #}
	<section class="container-fluid min-vh-100 d-flex flex-column justify-content-center align-items-center px-0">
		<div class="row w-100 justify-content-center align-items-center flex-grow-1 mx-0">
			<div class="col-12 col-sm-10 col-md-8 col-lg-5 col-xl-4 px-2 px-sm-3">
				<div class="login-card shadow rounded-3 bg-white bg-opacity-95 p-3 p-sm-4 p-md-5">
					<div class="text-center mb-4">
						<h1 class="brand-text text-center mb-2">
							<span class="text-primary">Japaneeds</span><br class="d-sm-none"/>You
						</h1>
						<div class="japanese-text mb-3">ようこそ</div>
					</div>
					<form id="login-form" method="post">
						<div class="form-floating mb-3">
							<input type="email" class="form-control" id="floatingEmail" name="email" placeholder="Email" value="{{ last_username }}" required>
							<label for="floatingEmail">
								<i class="fas fa-envelope text-primary me-2"></i>
								Email</label>
						</div>
						<div class="form-floating mb-3">
							<input type="password" class="form-control" id="floatingPassword" name="password" placeholder="Mot de passe" required>
							<label for="floatingPassword">
								<i class="fas fa-lock text-primary me-2"></i>
								Mot de passe</label>
						</div>
						{# Token CSRF #}
						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
						
						<div class="d-flex flex-column flex-sm-row justify-content-between align-items-center mb-3 gap-2">
							<div class="form-check">
								<input type="checkbox" class="form-check-input" id="remember" name="remember">
								<label class="form-check-label" for="remember">Se souvenir de moi</label>
							</div>
							<a href="{{ path('forgotten_password') }}" class="a-link fw-bold text-decoration-none small">Mot de passe oublié ?</a>
						</div>
						<button type="submit" class="btn btn-login text-white w-100 mb-2">
							<i class="fas fa-sign-in-alt me-2"></i>Connexion
						</button>
						<div class="text-center">
							<span class="text-muted">Pas encore de compte ?</span>
							<a href="{{ path('app_register') }}" class="a-link fw-bold text-decoration-none ms-1">S'inscrire</a>
						</div>
					</form>
				</div>
			</div>
		</div>
	</section>
</main>
{% endblock %}