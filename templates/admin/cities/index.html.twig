{% extends "base.html.twig" %}

{% block title %}Liste des villes
{% endblock %}

{% block body %}

	<div class="container">
		<div class="row">
			{% include "_partials/_adminav.html.twig" %}
			<main class="col-9 border border-light bg-light p-2">
				<h1>Liste des villes</h1>
				<table class="table">
					<thead>
						<tr>
							<th>ID</th>
							<th>Nom</th>
							<th>Slug</th>
						</tr>
					</thead>
                    <tbody>
                        {% for city in cities %}
                        <tr>
                            <td>{{ city.id }}</td>
                            <td>{{ city.name }}</td>
                            <td>{{ city.slug }}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
				</table>
			</main>
		</div>
	</div>

{% endblock %}
