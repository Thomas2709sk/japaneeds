{% extends 'base.html.twig' %}

{% block title %}Votre avis
{% endblock %}

{% block importmap %}
	{{ importmap(['app', 'reviewWebStar' ]) }}
{% endblock %}

{% block body %}
	<main>
		<h1 class="ms-3">Noter notre site</h1>
		<section class="container">
			<p class="fs-5">Aider nous à nous améliorer</p>
			<p class="fs-5">Donner votre avis sur notre site</p>
			{{ form_start(reviewWebForm) }}
			{{ form_widget(reviewWebForm.pseudo) }}
			{{ form_widget(reviewWebForm.rate) }}
			<div id="stars" class="d-flex mt-3 text-secondary justify-content-center stars">
				<i class="fa-solid fa-star star fs-1" data-value="1"></i>
				<i class="fa-solid fa-star star fs-1" data-value="2"></i>
				<i class="fa-solid fa-star star fs-1" data-value="3"></i>
				<i class="fa-solid fa-star star fs-1" data-value="4"></i>
				<i class="fa-solid fa-star star fs-1" data-value="5"></i>
			</div>
			<p id="note-text" class="text-center mt-2">Note: 0 sur 5</p>

			{{ form_row(reviewWebForm.commentary) }}
			<button type="submit" class="btn btn-primary">Envoyer</button>
			{{ form_end(reviewWebForm) }}
		</section>
	</main>
{% endblock %}
