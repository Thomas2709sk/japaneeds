<div class="modal fade" id="user-endModal-{{ reservation.id }}" tabindex="-1" aria-labelledby="user-endModalLabel-{{ reservation.id }}" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="user-endModalLabel">Finir la réservation-{{ reservation.reservnumber }}</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<p>
					<strong>Veuillez confirmer que tout s’est bien passé.</strong></p>

					<strong>Date :</strong>
					{{ reservation.day|date('d/m/Y') }}</p>

				<p>
					<strong>Nom guide :</strong>
					{{ reservation.guide.user.pseudo }}
				</p>
			</p>
		</div>
		<div class="d-flex justify-content-between modal-footer">
			<form method="POST" action="{{ path('app_reservations_confirm', { id: reservation.id }) }}">
				<button type="submit" class="btn btn-info">Fin</button>
			</form>
		</div>
	</div>
</div></div>
