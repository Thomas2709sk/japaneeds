
{% extends 'base.html.twig' %}

{% block title %}Recherche
{% endblock %}

{% block importmap %}
	{{ importmap(['app', 'dateSearch']) }}
{% endblock %}

{% block body %}
	<main class="container wrapper">
		<h1>Rechercher un guide</h1>
		{{ form_start(form) }}
		<div>
			{{ form_row(form.date) }}
		</div>
		<div>
			{{ form_row(form.city) }}
		</div>
		<button type="submit" class="btn btn-primary">Rechercher</button>
		{{ form_end(form) }}
	</main>
{% endblock %}
